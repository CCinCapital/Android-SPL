<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400sp"
    android:minHeight="450sp"
    android:background="@color/White">

    <Button
        android:id="@+id/bGarageOne"
        android:textSize="20sp"
        android:hint="Garage One"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/bGarageTwo"
        android:textSize="20sp"
        android:hint="Garage Two"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/bGarageOne"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/bGarageThree"
        android:textSize="20sp"
        android:hint="Garage Three: [DISABLED]"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/bGarageTwo"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/bGarageFour"
        android:textSize="20sp"
        android:hint="Garage Four: [DISABLED]"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/bGarageThree"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvCancel"
        android:textSize="15sp"
        android:text="Go Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/bGarageFour"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>